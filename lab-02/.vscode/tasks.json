{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      // Comando que ser√° executado
      "command": "make",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/Debug"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "cmake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "../"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/Debug"
      },
      "problemMatcher": [],
    }
  ]
}